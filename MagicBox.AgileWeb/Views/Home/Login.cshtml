@model MagicBox.AgileWeb.Models.HomeLoginRequest
@{
    ViewBag.Title = "用户登录";
}

<div class="row">

    @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "form-horizontal", style = "max-width: 350px;padding: 15px; margin: 0 auto;" }))
    {
        <div class="form-group row">
            <div class="col-md-offset-2 col-md-10">
                <h2>用户登录</h2>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                @Html.TextBoxFor(model => model.UserName, new { @class = "form-control input-lg", placeholder = "登录邮箱" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                @Html.PasswordFor(model => model.Password, new { @class = "form-control input-lg", placeholder = "登录密码" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                @Html.ValidationSummary(false)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12"> 
                <button type="submit" class="btn btn-primary">登录</button>
            </div>
        </div>
    }

</div>